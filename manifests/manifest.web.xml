<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
  xsi:type="MailApp">

  <Id>5d890807-a67a-43c5-831b-fb6d90520212</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Antoine Bendafi</ProviderName>
  <DefaultLocale>fr-FR</DefaultLocale>
  <DisplayName DefaultValue="Agenda partagé"/>
  <Description DefaultValue="Associez un foyer à votre rendez-vous"/>
  <IconUrl DefaultValue="https://localhost:3000/assets/icon1.png"/>
  <SupportUrl DefaultValue="https://localhost:3000"/>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.5">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://localhost:3000/taskpanel.html"/>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteItem</Permissions>

  <Rule xsi:type="ItemIs" ItemType="Appointment" FormType="Edit"/>

  <VersionOverrides
    xmlns="http://schemas.microsoft.com/office/mailappversionoverrides"
    xsi:type="VersionOverridesV1_0">

    <Hosts>
      <Host xsi:type="MailHost"/>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="icon1" DefaultValue="https://localhost:3000/assets/icon1.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="taskpaneUrl" DefaultValue="https://localhost:3000/taskpanel.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="groupLabel" DefaultValue="Foyers"/>
        <bt:String id="buttonLabel" DefaultValue="Afficher les foyers"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="buttonDescription" DefaultValue="Associez un foyer au rendez-vous"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>