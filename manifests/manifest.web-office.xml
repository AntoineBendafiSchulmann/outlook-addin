<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
           xsi:type="MailApp">
  <Id>bb899576-f404-470c-841d-157f964bb0c5</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Antoine Bendafi</ProviderName>
  <DefaultLocale>fr-FR</DefaultLocale>
  <DisplayName DefaultValue="Agenda partagé"/>
  <Description DefaultValue="Associez un foyer à votre rendez-vous"/>
  <IconUrl DefaultValue="https://outlook-addin-tan.vercel.app/assets/icon1.png"/>
  <SupportUrl DefaultValue="https://outlook-addin-tan.vercel.app"/>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.5">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>

  <Permissions>ReadWriteItem</Permissions>

  <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides"
                    xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabMessage">
              <Group id="GroupFoyers">
                <Label resid="groupLabel"/>
                <Control xsi:type="Button" id="BtnOpenAgenda">
                  <Label resid="buttonLabel"/>
                  <Supertip>
                    <Title resid="buttonLabel"/>
                    <Description resid="buttonDescription"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon1"/>
                    <bt:Image size="32" resid="icon1"/>
                    <bt:Image size="80" resid="icon1"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="taskpaneUrl"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="icon1" DefaultValue="https://outlook-addin-tan.vercel.app/assets/icon1.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="taskpaneUrl" DefaultValue="https://outlook-addin-tan.vercel.app/taskpanel.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="groupLabel" DefaultValue="Foyers"/>
        <bt:String id="buttonLabel" DefaultValue="Agenda partagé"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="buttonDescription" DefaultValue="Associez un foyer au rendez-vous"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>